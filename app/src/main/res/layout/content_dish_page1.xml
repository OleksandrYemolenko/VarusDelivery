<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DishPageActivity"
    tools:showIn="@layout/activity_dish_page"
    android:layout_margin="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameDishPage"
        android:fontFamily="sans-serif"
        android:textSize="25sp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priceDishPage"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:layout_marginTop="600dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descDishPage"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:layout_marginTop="60dp"/>


    <!-- Purchase and  +- btn + amount text -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|end"
        android:layout_marginTop="590dp"
        android:layout_marginEnd="16dp"
        android:paddingBottom="5dp">
        <Button
            android:id="@+id/btn_plus"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_marginTop="14dp"
            android:layout_alignParentLeft="true"
            android:paddingBottom="5dp"
            />

        <TextView
            android:id="@+id/dish_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:text="1"
            android:paddingBottom="5dp"
            />
        <Button
            android:id="@+id/btn_minus"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_marginTop="14dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="110.5dp"
            android:paddingBottom="5dp"
            />
    </RelativeLayout>

</RelativeLayout>